<interface>
  <template class="GtkListItem">
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <style>
          <class name="grid_box" />
        </style>
        <child>
          <object class="GtkLabel">
            <binding name="label">
              <lookup name="label" type="GtkLabel">
                <lookup name="item">GtkListItem</lookup>
              </lookup>
            </binding>
            <style>
              <class name="grid_item" />
            </style>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
